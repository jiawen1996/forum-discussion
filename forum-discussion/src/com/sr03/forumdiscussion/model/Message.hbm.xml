<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- This mapping demonstrates content-based discrimination for the table-per-hierarchy 
	mapping strategy, using a formula discriminator. -->

<hibernate-mapping
	package="com.sr03.forumdiscussion.model">

	<class name="Message" lazy="true" table="db_sr03.message">

		<meta attribute="class-description">
			This class contains the user detail.
		</meta>
		<composite-id name="messageId" class="MessageId">
			<key-property name="id"></key-property>
			<key-property name="destinationId"></key-property>
		</composite-id>

		<property name="content" column="content" type="string" />
		
		<many-to-one name="editor" class="User" column="editor"  />
		<many-to-one name="destination" class="Forum" column="destination" insert="false" update="false"></many-to-one>
	</class>


</hibernate-mapping>